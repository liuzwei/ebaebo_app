<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="10dp"
              android:background="@drawable/zhuye_item_select"
        >
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searchLayoutTx">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/head"
                    android:maxWidth="60dp"
                    android:maxHeight="60dp"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/jiaohu_item_photo"
                    />
            <!--<TextView android:layout_width="wrap_content"-->
                      <!--android:layout_height="wrap_content"-->
                      <!--android:background="@drawable/yuan"-->
                      <!--android:text="9"-->
                      <!--android:gravity="center"-->
                      <!--android:textSize="10sp"-->
                      <!--android:layout_toRightOf="@+id/jiaohu_item_photo"-->
                      <!--android:id="@+id/messnum"-->
                      <!--android:textColor="#ffffff"/>-->
            <ImageView
                    android:id="@+id/user_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yuan"
                    android:layout_alignRight="@id/jiaohu_item_photo"
                    />
        </RelativeLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:id="@+id/searchLayout"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李老师"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:id="@+id/jiaohu_item_name"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    android:text="老师"
                    android:textColor="#999999"
                    android:id="@+id/jiaohu_item_dept"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/searchFriendAddGz"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2014-05-05 20:00"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:padding="5dp"
                    android:id="@+id/jiaohu_item_lastmessage"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:width="160dp"
                    />

        </LinearLayout>

            </LinearLayout>


