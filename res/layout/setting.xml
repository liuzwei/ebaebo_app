<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f7f7f7">

    <!-- head开始 -->
    <RelativeLayout
            android:id="@+id/lp_01"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/titlebar_background"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            >
        <ImageView
                android:id="@+id/setting_back"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/forgetpassback"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="设置"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />
    </RelativeLayout>
    <!-- head结束 -->
    <com.app.ebaebo.widget.ReboundScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="5dp"
                          android:id="@+id/setting_account_manage_layout"
                          android:background="@drawable/zhuye_item_select"
                          android:layout_marginTop="5dp"
                    >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="账号"
                          android:layout_weight="1"
                          android:textSize="18sp"
                          android:id="@+id/setting_account_manage"
                          android:textColor="#333333"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:id="@+id/zhanghao"
                        android:text="123456"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="5dp"
                          android:id="@+id/setting_password"
                          android:background="@drawable/zhuye_item_select"
                          android:layout_marginTop="5dp"
                    >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="修改密码"
                          android:layout_weight="1"
                          android:textSize="18sp"
                          android:textColor="#333333"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@drawable/arrow_right"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="5dp"
                          android:id="@+id/setting_phonenumber"
                          android:background="@drawable/zhuye_item_select"
                          android:layout_marginTop="5dp"
                    >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="我的手机号"
                          android:textSize="18sp"
                          android:layout_weight="1"
                          android:textColor="#333333"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@drawable/arrow_right"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:background="@drawable/zhuye_item_select"
                          android:padding="5dp"
                          android:id="@+id/setting_baobao"
                          android:layout_marginTop="5dp"
                    >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="宝宝设置"
                          android:textSize="18sp"
                          android:layout_weight="1"
                          android:id="@+id/setting_setpwr"
                          android:textColor="#333333"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@drawable/arrow_right"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:id="@+id/setting_mama"
                          android:background="@drawable/zhuye_item_select"
                          android:padding="5dp"
                          android:layout_marginTop="5dp"
                    >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="家长设置"
                          android:textSize="18sp"
                          android:layout_weight="1"
                          android:id="@+id/setting_question"
                          android:textColor="#333333"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@drawable/arrow_right"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:id="@+id/setting_teacherliner"
                          android:background="@drawable/zhuye_item_select"
                          android:padding="5dp"
                          android:layout_marginTop="5dp"
                          android:visibility="gone"
                    >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="老师设置"
                          android:textSize="18sp"
                          android:layout_weight="1"
                          android:id="@+id/setting_teacher"
                          android:textColor="#333333"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@drawable/arrow_right"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:background="@drawable/zhuye_item_select"
                          android:padding="5dp"
                          android:id="@+id/setting_bound_email"
                          android:layout_marginTop="5dp"
                    >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="绑定邮箱"
                          android:textSize="18sp"
                          android:layout_weight="1"
                          android:id="@+id/setting_version_update"
                          android:textColor="#333333"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@drawable/arrow_right"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:background="@drawable/zhuye_item_select"
                          android:padding="5dp"
                          android:id="@+id/settingwifiliner"
                          android:layout_marginTop="5dp"
                    >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="仅在WIFI连接时上传"
                          android:textSize="18sp"
                          android:layout_weight="1"
                          android:id="@+id/settingwifi"
                          android:textColor="#333333"/>
                <com.app.ebaebo.util.SexRadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/segment_text"
                        >
                    <RadioButton android:id="@+id/button_one"
                                 android:minWidth="40dip"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:minHeight="30dip"
                                 android:text="开"
                                 android:textAppearance="?android:attr/textAppearanceSmall"
                                 android:button="@null"
                                 android:gravity="center"
                                 android:textColor="@color/radio_colors"/>
                    <RadioButton android:id="@+id/button_two"
                                 android:minWidth="40dip"
                                 android:minHeight="30dip"
                                 android:text="关"
                                 android:button="@null"
                                 android:gravity="center"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:textAppearance="?android:attr/textAppearanceSmall"
                                 android:textColor="@color/radio_colors"/>
                </com.app.ebaebo.util.SexRadioGroup>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:background="@drawable/zhuye_item_select"
                          android:padding="5dp"
                          android:id="@+id/setting_about"
                          android:layout_marginTop="5dp"
                    >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="关于"
                          android:textSize="18sp"
                          android:layout_weight="1"
                          android:id="@+id/setting_us"
                          android:textColor="#333333"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/arrow_right"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:background="@drawable/zhuye_item_select"
                          android:padding="5dp"
                          android:id="@+id/setting_checkversion"
                          android:layout_marginTop="5dp"
                    >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="检查更新"
                          android:textSize="18sp"
                          android:layout_weight="1"
                          android:textColor="#333333"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/arrow_right"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"></LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="40dp"
                          android:orientation="horizontal"
                          android:background="@drawable/zhuye_item_select"
                          android:id="@+id/setting_exit_layout"
                          android:clickable="true"
                          android:layout_marginTop="5dp"
                          android:layout_marginBottom="20dp"
                    >
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:text="退出当前账号"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:id="@+id/setting_exit"
                          android:textColor="#f00f00"/>

            </LinearLayout>
        </LinearLayout>
    </com.app.ebaebo.widget.ReboundScrollView>

</LinearLayout>