<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/white"
        >
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >

        <FrameLayout
                android:id="@+id/tab_content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="#77557799"
                />

            <RadioGroup
                    android:id="@+id/main_radiogroups"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#A8A8A8"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    >
                <RadioButton
                        android:id="@+id/main_message"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/footwenzi"
                        android:button="@null"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:layout_weight="1.0"
                        android:singleLine="true"
                        android:checked="true"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        />
                <RadioButton
                        android:id="@+id/main_photo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/footzhaoxiang"
                        android:button="@null"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:singleLine="true"
                        android:layout_marginTop="5dp"
                        />
                <RadioButton
                        android:id="@+id/main_video"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/footshexiang"
                        android:button="@null"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:singleLine="true"
                        android:layout_marginTop="5dp"
                        />
                <RadioButton
                        android:id="@+id/main_record"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/footluyin"
                        android:button="@null"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:singleLine="true"
                        android:layout_marginTop="5dp"
                        />
                <RadioButton
                        android:id="@+id/main_picture"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/foottuku"
                        android:button="@null"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:singleLine="true"
                        android:layout_marginTop="5dp"
                        />
            </RadioGroup>
    </LinearLayout>
</LinearLayout>

