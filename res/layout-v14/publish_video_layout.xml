<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#FFF"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/lp_01"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/titlebar_background"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            >
        <ImageView
                android:id="@+id/publish_video_back"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/forgetpassback"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="发布视频"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:id="@+id/mum_setting_title"
                />
        <TextView
                android:id="@+id/publish_video_run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:text="发布"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/recorder_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#222222"
            android:paddingBottom="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="20dp" >

        <Button
                android:id="@+id/play_cancel"
                android:layout_width="66dp"
                android:layout_height="36dp"
                android:background="@drawable/btn_recorder_cancel"
                android:text="取消"
                android:textColor="#bbbbbb"
                android:textSize="14dp" />

        <Button
                android:id="@+id/play_next"
                android:layout_width="66dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_recorder_next"
                android:text="使用"
                android:textColor="#444444"
                android:textSize="14dp" />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/publish_video_preview_video_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextureView
                android:id="@+id/preview_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/previre_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icn_play_big"
                android:layout_centerInParent="true"
                android:scaleType="center"/>
    </RelativeLayout>
</LinearLayout>